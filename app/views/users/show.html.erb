<div class="container">
<h1 class="text-center mt-4 text-white"><%=@user.username%>'s profile</h1><br>
<%= gravatar_for @user, size: 200%>
<div class="text-center mt-4">
	<% if logged_in? %>
	<% if @user == current_user %>
		 <%= link_to 'Edit profile', edit_user_path(@user), class:"btn btn-outline-dark text-waring bg-info" %>
	<%end%>
	<% if current_user.admin?%>
        <%= link_to 'Delete Profile', user_path(@user),
		        class:"btn btn-danger text-white",
		        data:{
				turbo_method: :delete,
				turbo_confirm: "Are you sure you want to delete this user account?"
			} %>
	<%end%>
		</div>
        <div class="container text-end">
           <%= link_to 'Create New Article', new_article_path, class:" btn btn-outline-warning " %>
        </div><br>
		<h1 class="text-start mt-4 text-white ">Articles</h1>

<br>
    <%end%>
	</div>

<%= render 'shared/cards', obj: @user.articles%>
